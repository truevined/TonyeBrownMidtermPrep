<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tonyebrown.tonyebrown_midterm.MainActivity"
    android:orientation="vertical"
    android:background="#fff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:hint="@string/placeholderText"
        android:background="#7bff00"
        android:layout_marginBottom="10dp"
        android:gravity="center" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:name="tonyebrown.tonyebrown_midterm.MyButtons"
        android:id="@+id/fragment"
        android:layout_marginBottom="7dp" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:name="tonyebrown.tonyebrown_midterm.Description"
        android:id="@+id/fragment2" />
</LinearLayout>
